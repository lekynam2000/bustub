{
    "version": "0.2.0",
    "configurations": [  
        {
            "name": "Debug test C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/${fileBasenameNoExtension}", // Replace with the path to your compiled binary
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
            {"name":"LSAN_OPTIONS", "value":"verbosity=1:log_threads=1"}
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "buildTest",
            "miDebuggerPath": "/usr/bin/gdb" // Replace with the path to your GDB executable
        }
    ]
}
